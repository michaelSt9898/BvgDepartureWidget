<resources>

    <style name="Widget.BvgDepartureWidget.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.BvgDepartureWidget.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="RoundWidgetCornerTheme">
        <item name="backgroundRadius">@dimen/widget_background_radius_dimen</item>
    </style>

    <style name="ToggleChipViewWithIconSquare">
        <item name="android:checkable">true</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_color</item>
        <item name="chipIconEnabled">true</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="iconStartPadding">5sp</item>
    </style>

    <style name="ToggleChipViewWithIconRound">
        <item name="android:checkable">true</item>
        <item name="chipBackgroundColor">@color/bg_chip_state_color</item>
        <item name="chipIconEnabled">true</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
    </style>

</resources>